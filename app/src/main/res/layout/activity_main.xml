<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray">

    <!-- EditText for Number 1 -->

    <!-- EditText for Number 2 -->

    <!-- Spinner for Operations -->
    <EditText
        android:id="@+id/editTextNumber1"
        android:layout_width="304dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter number 1"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="301dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter number 2"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <!-- Button to Calculate -->

    <!-- TextView for Result -->

    <Spinner
        android:id="@+id/spinnerOperations"
        android:layout_width="205dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:entries="@array/operations"
        android:prompt="@string/select_operation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:onClick="performOperation"
        android:text="Calculate"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="243dp"
        android:layout_height="62dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:text="Result is"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

</androidx.constraintlayout.widget.ConstraintLayout>
